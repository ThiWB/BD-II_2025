@model ICollection<EF_Teste.Models.Course>

@{
    ViewData["Title"] = "Cursos";
}

<div class="text-center">
    <h1 class="display-4">@Model.Count estudante</h1>

    <a asp-controller="Course" asp-action="Create">Novo</a>
    <table>
        <tr>
            <table class="table table-responsive table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Excluir</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.ID</td>
                            <td>@s.Name</td>
                            <td>
                                <form asp-controller="Course" asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@s.ID" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Excluir
                                    </button>
                                </form>
                            </td>

                            <td>
                                <a asp-controller="Course" asp-action="Edit" asp-route-id="@s.ID" class="btn btn-primary">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </tr>
    </table>

</div>
