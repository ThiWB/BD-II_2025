@using EF_Teste.ViewModels.StudentCourses
@model StudentCoursesViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h1>Matrícula</h1>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control">
                    <option value="">Selecione um Aluno</option>
                    @foreach (var student in Model.Students)
                    {
                        <option value="@student.ID">
                            @student.FirstMidName @student.LastName
                        </option>
                    }
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @for(int i = 0; i<Model.Courses.Count();i++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"  asp-for="Courses[i].isSelected"/>
                        <input type="hidden" asp-for="Courses[i].Id" />
                        <label class="form-check-label" asp-for="Courses[i].isSelected">
                            @Model.Courses[i].Name
                        </label>

                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
