@model ICollection<EF_Teste.Models.Student>

@{
    ViewData["Title"] = "Estudantes Matrícula";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">
            @Model.Count @(Model.Count == 1 ? "estudante" : "estudantes")
        </h1>
        <a asp-controller="Home" asp-action="Create" class="btn btn-success">Novo Estudante</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Data Matrícula</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.ID</td>
                    <td>@s.FirstMidName</td>
                    <td>@s.LastName</td>
                    <td>@s.EnrollmentDate.ToShortDateString()</td>
                    <td>
                        <div class="btn-group" role="group">
                            <form asp-controller="Home" asp-action="Delete" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este estudante?');">
                                <input type="hidden" name="id" value="@s.ID" />
                                <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                            </form>

                            <a asp-controller="Home" asp-action="Update" asp-route-id="@s.ID" class="btn btn-warning btn-sm mx-1">Atualizar</a>
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@s.ID" class="btn btn-primary btn-sm">Editar</a>
                        </div>
                    </td>
                </tr>

                @if (s.StudentCourses != null && s.StudentCourses.Any())
                {
                    <tr>
                        <td colspan="5">
                            <strong>Cursos matriculados:</strong>
                            <ul>
                                @foreach (var sc in s.StudentCourses)
                                {
                                    <li>@sc.Course?.Name</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
