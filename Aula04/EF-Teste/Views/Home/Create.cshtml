@model EF_Teste.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label"/>
                <input asp-for="FirstMidName" class="form-control"/>
                <span asp-validation-for="FirstMidName" class="text-danger"/>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"/>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"/>
            </div>

            <div class="form-group">
                <label asp-for="EnrollmentDate" class="control-label"/>
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>