@model ICollection<EF_Teste.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@Model.Count estudante</h1>
    
    <a asp-controller="Home" asp-action="Create">Novo</a>
    <table>
    <tr>
        <table class="table table-responsive table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Data Matrícula</th>
                    <th>Excluir</th>
                    <th>Atualizar</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                            <td>@s.ID</td>
                            <td>@s.FirstMidName</td>
                            <td>@s.LastName</td>
                            <td>@s.EnrollmentDate.ToShortDateString()</td>

                            <td>
                                <form asp-controller="Home" asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@s.ID"/>
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Excluir
                                    </button>
                                </form>
                            </td>

                            <td>
                                <a asp-controller="Home" asp-action="Update" asp-route-id="@s.ID" class="btn btn-warning btn-sm">Atualizar</a>
                            </td>

                            <td>
                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@s.ID" class="btn btn-primary">Editar</a>
                            </td>
                    </tr>
                }
                </tbody>

        </table>
    </tr>
</table>

</div>
