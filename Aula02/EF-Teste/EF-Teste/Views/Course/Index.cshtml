@model ICollection<EF_Teste.Models.Course>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">
        @Model.Count Cursos
    </h1>

    <a asp-controller="Course" asp-action="Create">Novo</a>
    <table class="table rable-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.ID</td>
                    <td>@s.Name</td>
                    <td>
                        <form asp-controller="Home" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@s.ID" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Excluir
                            </button>
                        </form>
                    </td>
                    <td>
                        <a asp-controller=Course" asp-action="Update" asp-route-id="@s.ID" class="btn btn-warning btn-sm">Atualizar</a>
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@s.ID" class="btn btn-primary btn-sm">Editar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

